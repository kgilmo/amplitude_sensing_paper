doi = {10.1103/RevModPhys.52.341},
file = {:C$\backslash$:/Users/kag3/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Caves et al. - 1980 - On the measurement of a weak classical force coupled to a quantum-mechanical oscillator. I. Issues of principle.pdf:pdf},
