journal = {Surface Science Reports},
keywords = {Atomic force microscope,Force curves,Surface forces},
month = {oct},
number = {1-6},
pages = {1--152},
pmid = {12601156},
title = {{Force measurements with the atomic force microscope: Technique, interpretation and applications}},
